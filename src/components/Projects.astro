---
import PythonIcon from "./icons/PythonIcon.astro";
import JavaIcon from "./icons/JavaIcon.astro";

const TAGS = {
    PYTHON: {
        name: "Python",
        class: "bg-[#4B8BBE] text-white border-1 border-[#FFD43B]",
        icon: PythonIcon,
    },
    JAVA: {
        name: "Java",
        class: "bg-white text-black border-2 border-[#FFD43B]",
        icon: JavaIcon,
    },
};

const PROJECTS = [
    {
        title: "CodeCracker - A Mastermind game",
        description:
            "Created with Python. It is a Mastermind game where the user has to guess the code created by the computer.",
        link: "#",
        github: "https://github.com/Ignatox/Code_Cracker_Mastermind",
        image: "/projects/codeCracker.webp",
        tags: [TAGS.PYTHON],
    },
];
---

{
    PROJECTS.map(({ title, description, link, github, image, tags }) => (
        <article class="flex flex-col gap-y-4">
            <h3 class="text-2xl font-semibold text-[#6DA6C0] mb-2">{title}</h3>
            <p class="text-lg mb-4 text-wrap">{description}</p>
            <ul class="flex flex-row gap-x-2">
                {tags.map((tag) => (
                    <li>
                        <span class={`flex gap-x-2 rounded-full text-xs py-1 px-2 ${tag.class}`}>
                        <tag.icon class="size-4" /> 
                        {tag.name}
                    </span>
                    </li>
                ))}
            </ul>
            <li class="flex flex-row gap-x-2">
                <a href={link}>Ver proyecto</a>
                <a href={github}>Ver repositorio</a>
            </li>
            <img
                class="rounded-lg shadow-2xl shadow-white/10"
                src={image}
                alt={`Imagen del proyecto ${title}`}
            />
        </article>
    ))
}
